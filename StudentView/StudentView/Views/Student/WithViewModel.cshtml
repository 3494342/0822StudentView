@using StudentView.Models
@model MarkSheet
@{
    ViewBag.Title = "WithViewModel";
}

<h2>WithViewModel</h2>
<div class="row">
    <div class="col-sm-3">
        <label>@Model.MyStudent.Number</label>
        <label>@Html.BeginForm()</label>
    </div>
    <div class="col-sm-9">
        <label>@Model.MyStudent.Name</label>
    </div>
</div>
<table class="table">
    <tr>
        <td>C# Marks</td>
        <td>@Model.Assessment.CsharpMarks</td>
    </tr>
    <tr>
        <td>MVCMarks</td>
        <td>@Model.Assessment.MVCMarks</td>
    </tr>
    <tr>
        <td>BootstrapMarks</td>
        <td>@Model.Assessment.BootstrapMarks</td>
    </tr>
    <tr>
        <th>
            Total
        </th>
        <td>@Model.Total</td>
    </tr>
    
</table>

